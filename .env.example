# Server
PINGU_PORT=8000
PINGU_HOST=0.0.0.0
PINGU_TIMEOUT_MS=3600000

# TLS (required unless PINGU_TLS=0)
PINGU_TLS_KEY=/path/to/your.key
PINGU_TLS_CERT=/path/to/your.crt
# PINGU_TLS=0  # Disable TLS

# Notifications (optional)
# NTFY_URL=https://ntfy.sh/your-topic

# Client
PINGU_URL=https://your-hostname:8000
